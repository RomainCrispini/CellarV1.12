<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vue.CellarStatMillesimeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTextEstimate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/yanone_kaffeesatz"
                android:text="Estimation totale de mes bouteilles : "
                android:textColor="@color/green_very_light"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txtTotalEstimate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yanone_kaffeesatz"
                android:text="estimation"
                android:textAlignment="textStart"
                android:textColor="@color/green_very_light"
                android:textSize="18dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtEmptyPieChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/pink"
            android:textSize="20dp"
            android:text="Il manque quelques informations pour Ã©diter des statistiques fiables !" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChartMillesime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp" />

    </LinearLayout>

</FrameLayout>