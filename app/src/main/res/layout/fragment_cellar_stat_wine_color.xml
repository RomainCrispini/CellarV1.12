<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vue.CellarStatWineColorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTextNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/yanone_kaffeesatz"
                android:text="Nombre total de bouteilles : "
                android:textColor="@color/green_very_light"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txtTotalNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/yanone_kaffeesatz"
                android:text="nb"
                android:textAlignment="textStart"
                android:textColor="@color/green_very_light"
                android:textSize="18dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtEmptyPieChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/orange"
            android:textSize="16dp"
            android:text="Il manque quelques informations pour Ã©diter des statistiques fiables !" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartWineColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="100dp" />

    </LinearLayout>

</FrameLayout>