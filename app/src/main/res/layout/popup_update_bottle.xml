<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="@color/green_middle_dark"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="5dp"
                android:src="@drawable/popup_update_bottle"
                android:tint="@color/orange" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/yanone_kaffeesatz"
                android:text="Les caractéristiques de cette bouteille vont être modifiées !"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textSize="18dp"
                tools:ignore="RtlCompat" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/green_middle_light" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/pastilleImageBottle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/grey_light"
                        app:cardCornerRadius="35dp"
                        app:cardElevation="0dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/grey_light"
                            app:cardCornerRadius="35dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/imageWineColor"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:elevation="0dp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/green_very_dark"
                            app:cardCornerRadius="33dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/imageBottle"
                                android:layout_width="66dp"
                                android:layout_height="66dp"
                                android:layout_gravity="center"
                                android:elevation="0dp" />
                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/region"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/yanone_kaffeesatz"
                    android:maxLines="1"
                    android:text="Région"
                    android:textAlignment="center"
                    android:textColor="@color/green_very_light"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/domain"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/yanone_kaffeesatz"
                    android:maxLines="1"
                    android:text="Domaine"
                    android:textAlignment="center"
                    android:textColor="@color/green_very_light"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/appellation"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/yanone_kaffeesatz"
                    android:maxLines="1"
                    android:text="Appellation"
                    android:textAlignment="center"
                    android:textColor="@color/green_very_light"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/millesime"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/yanone_kaffeesatz"
                    android:maxLines="1"
                    android:text="Millésime"
                    android:textAlignment="center"
                    android:textColor="@color/green_very_light"
                    android:textSize="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/green_middle_light" />

                <LinearLayout
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/green_very_dark"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/imageFavorite"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_heart_green_middle_light"
                            android:tint="@color/green_third_light"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/green_very_dark"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/nbRatePopup"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="1dp"
                            android:backgroundTint="@color/transparent"
                            android:gravity="center"
                            android:text="*/10"
                            android:textColor="@color/green_apple"
                            android:textSize="18dp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/green_very_dark"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/imageWish"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:layout_weight="1"
                            android:src="@drawable/icone_menu_tabs_wishlist"
                            android:tint="@color/green_third_light" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnAccept"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/popup_success"
                    android:tint="@color/orange" />

                <ImageButton
                    android:id="@+id/btnDenie"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icone_out_info_window"
                    android:tint="@color/orange" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>